'use client';

import dynamic from 'next/dynamic';

// This wrapper ensures the 3D avatar only loads on the client side once
// without dynamic import duplication issues
const AgentAvatar = dynamic(
  () => import('./4g3n7Avatar'),
  { 
    ssr: false, 
    loading: () => (
      <div className="flex h-full items-center justify-center">
        <div className="animate-pulse text-blue-400">Loading Avatar...</div>
      </div>
    )
  }
);

export default function AgentAvatarWrapper() {
  // The key attribute helps ensure the component is only mounted once
  return <AgentAvatar key="agent-avatar-singleton" />;
}