'use client';

import React from 'react';
import dynamic from 'next/dynamic';

// Use dynamic import with no SSR for the 3D component to prevent duplicate loads
const AgentAvatar = dynamic(
  () => import('@/components/4g3n7Avatar'),
  { 
    ssr: false, 
    loading: () => (
      <div className="flex h-full items-center justify-center">
        <div className="animate-pulse text-blue-400">Loading Avatar...</div>
      </div>
    )
  }
);

// Client component to handle the 3D avatar
export default function AvatarSection() {
  return (
    <div className="w-full h-full">
      <AgentAvatar key="agent-avatar-singleton" />
    </div>
  );
}